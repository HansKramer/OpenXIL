.sp .5v
.BI "void xil_colorspace_get_type(XilColorspace* " colorspace );
.br
.ft R
.fi
.in
.LP
.sp .5v
.BI "char* xil_colorspace_get_name(XilColorspace* " colorspace );
.br
.ft R
.fi
.in
.LP
.sp .5v
